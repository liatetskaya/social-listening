<%- model_class = Checkin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @checkin.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_first_name) %>:</strong></dt>
  <dd><%= @checkin.user_first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_last_name) %>:</strong></dt>
  <dd><%= @checkin.user_last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_gender) %>:</strong></dt>
  <dd><%= @checkin.user_gender %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              checkin_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_checkin_path(@checkin), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              checkin_path(@checkin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
