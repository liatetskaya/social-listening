<%= form_for @checkin, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_last_name, :class => 'text_field' %>
    </div>
  </div>
   <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    
  </div>
<% end %>
