<%- model_class = Insight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Page) %>:</strong></dt>
  <dd><%= @insight.Page %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_fan_adds) %>:</strong></dt>
  <dd><%= @insight.page_fan_adds %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_views) %>:</strong></dt>
  <dd><%= @insight.page_views %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_engaged_users) %>:</strong></dt>
  <dd><%= @insight.page_engaged_users %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_places_checkins) %>:</strong></dt>
  <dd><%= @insight.page_places_checkins %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_posts_impressions) %>:</strong></dt>
  <dd><%= @insight.page_posts_impressions %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              insights_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_insight_path(@insight), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              insight_path(@insight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
